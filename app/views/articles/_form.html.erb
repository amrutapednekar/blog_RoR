<%= form_with model: @article do |form|%>

    <% @article.errors.full_messages.each do |message| %>
        <div><%= message %></div>
     <% end %> 

    <div>
        <%= form.label :text%><br/>
        <%= form.text_field :title%>
         
    </div>

    <div>
        <%= form.label :body %><br>
        <%= form.text_area :body %>
    </div>

  <div>
       <%= form.submit %>
  </div>
<% end %>   